<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SoccerFragment">
    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_fragment_headlineImage"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_title"
        android:hint="@string/soccer_fragment_Title"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_below="@+id/soccer_fragment_headlineImage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_id"
        android:textSize="15dp"
        android:layout_below="@id/soccer_title"
        android:hint="@string/soccer_fragment_ID"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soccer_id"
        android:id="@+id/soccer_description"
        android:hint="@string/soccer_fragment_Description"
        android:layout_centerHorizontal="true"
        android:textSize="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_date"
        android:layout_below="@+id/soccer_description"
        android:hint="@string/soccer_fragment_Date"
        android:layout_centerHorizontal="true"
        android:textSize="13dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        />

</RelativeLayout>