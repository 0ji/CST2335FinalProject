<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="car icon"
        app:srcCompat="@drawable/car" />

    <TextView
        android:id="@+id/activityTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Car database app"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Author: Koji DIno"
        android:textColor="#CC2929"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/activityVersionNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:text="Version 1.0.0"
        android:textColor="#1C81CF"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>